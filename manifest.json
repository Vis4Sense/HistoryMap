{
    "manifest_version": 2,

    "name": "SenseMap",
    "description": "SenseMaking with Analytic Provenance",
    "version": "0.1.1",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "browser_action": {
        "default_icon": {
            "19": "logo/sm-logo-19.png"
        },
        "default_title": "Open SenseMap"
    },

    "icons": {
      "128": "logo/sm-logo-128.png"
   },

    "background": {
        "page": "src/html/background.html",
        "persistent": false
    },

    "content_scripts": [
    {
      "matches": [
        "file:///*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
          "lib/jquery.min.js",
        "src/js/browser/contentScripts.js"
      ],
      "run_at": "document_end"
    }
  ],

    "permissions": [
        "<all_urls>",
        "chrome://favicon/",
        "storage",
        "history",
        "tabs",
        "contextMenus",
        "identity",
        "https://accounts.google.com/*",
        "https://www.googleapis.com/*"
    ],

    "oauth2": {
        "client_id": "216563153005-3nh8toqoe8gjr151fbsvhru3hls5eh59.apps.googleusercontent.com",
        "scopes": [
        "https://www.googleapis.com/auth/plus.login"
        ]
    },

    "web_accessible_resources": ["src/css/*.*", "tests/tests.html"],

    "options_page":"/src/html/options.html"
}
